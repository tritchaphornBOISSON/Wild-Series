{% extends "base.html.twig" %}

{% block title %}Catégorie page{% endblock %}

{% block body %}
    <h1>Toutes les catégories : </h1>

    {% for category in categories %}
        <div>
            <a href="{{ path("category_show", { categoryName: category.name }) }}"><h2>{{ loop.index }} / Catégorie : {{ category.name }} </h2></a>
        </div>
    {% else %}
        Aucune catégorie trouvée.
    {% endfor %}
{% endblock %}